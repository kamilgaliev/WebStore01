@model AdminProductViewModel
@{
    ViewBag.Title = $"Редактирование товара {Model.Name}";
}

<h1>Редактирование</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" readonly />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Бренд</label>
                <select asp-for="BrandId">
                    @foreach (var b_item in Model.BrandItems)
                    {
                        @if (b_item.Id == Model.BrandId)
                        {
                            <option value="@b_item.Id" selected="selected">@b_item.Name</option>
                        }
                        else
                        {
                            <option value="@b_item.Id">@b_item.Name</option>
                        }

                    }
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionId" class="control-label">Категория</label>
                <select asp-for="SectionId">
                    @foreach (var s_item in Model.SectionItems)
                    {
                        @if (s_item.Id == Model.SectionId)
                        {
                            <option value="@s_item.Id" selected="selected">@s_item.Name</option>
                        }
                        else
                        {
                            <option value="@s_item.Id">@s_item.Name</option>
                        }

                    }
                </select>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Картинка</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Назад к списку</a>
</div>