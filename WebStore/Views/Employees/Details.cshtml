@model WebStore.Models.Employee

@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = $"Сотрудник ID: {Model.Id}";
}


<h4>Сотрудник</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Id
    </dt>
    <dd class="col-sm-10">
        @Model.Id
    </dd>
    <dt class="col-sm-2">
        Фамилия
    </dt>
    <dd class="col-sm-10">
        @Model.LastName
    </dd>
    <dt class="col-sm-2">
        Имя
    </dt>
    <dd class="col-sm-10">
        @Model.FirstName
    </dd>
    <dt class="col-sm-2">
        Отчество
    </dt>
    <dd class="col-sm-10">
        @Model.Patronymic
    </dd>
    <dt class="col-sm-2">
        Возраст
    </dt>
    <dd class="col-sm-10">
        @Model.Age
    </dd>
</dl>

<hr />

<a asp-action="Index" class="btn btn-default">Назад</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>

