@using WebStore.Interfaces
@using WebStore.Services.Mapping
@inject IProductData ProductData
@{
    var products = ProductData
        .GetProducts().FromDTO()
        .OrderBy(p => p.Order)
        .Take(6)
        .ToView();
}

<partial name="Partial/_Slider" /> <!--/slider-->

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" /> <!--left-sidebar-->
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturesItems" model="products"/> <!--features_items-->

                <partial name="Partial/_CategoryTab" /> <!--/category-tab-->

                <partial name="Partial/_RecommendedItems" /> <!--/recommended_items-->

            </div>
        </div>
    </div>
</section>